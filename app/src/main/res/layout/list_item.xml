<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/txtMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtMarca"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_weight=".8"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtTipoProd_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tipoProd"
                android:textSize="17sp"
                android:layout_weight=".8"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtModelo"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="nombreVeh "
                    android:textSize="14sp"
                    android:layout_weight="40"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtCodProd_2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="nombreVeh "
                    android:textSize="14sp"
                    android:layout_weight="40"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtAnno"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="gravity"
                    android:visibility="gone"/>


            </LinearLayout>
            <TextView
                android:id="@+id/txtTipoProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tipoProd"
                android:textSize="14sp"
                android:layout_weight=".8"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtCodProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombreFiltro"
                android:textSize="14sp"
                android:layout_weight=".8"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
